<!DOCTYPE html>
<html>
{{> head }}
<body>
  <div class="container">
    {{> header }}
    <form id="rt-form" onsubmit="return false">
      <div class="input-group">
        <span class="input-group-addon">@</span>
        <input type="text" size="30" autofocus
          placeholder="Insira o username do seu amigo..."
          class="input-lg form-control">
        <span class="input-group-btn">
          <input class="btn btn-primary btn-lg" type="submit" value="Random RT">
        </span>
      </div>
    </form>
    {{> footer}}
  </div>
  <script>
    var form = document.querySelector('form')
    form.addEventListener("submit", function (e) {
      window.location.pathname = form.querySelector('input').value
      return false
    } , false);
  </script>
  {{> analytics }}
</body>
</html>
